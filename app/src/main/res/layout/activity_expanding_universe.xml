<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".OurDynamicUniverse.ExpandingUniverse">

    <ImageButton
        android:id="@+id/returntoMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/buttoncolor"
        android:textColor="?attr/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uniTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/uniTitle"
        android:layout_width="258dp"
        android:layout_height="92dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="The Expanding Universe"
        android:textColor="?attr/textcolor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toMotion"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="?attr/buttoncolor"
        android:text="1"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="@+id/toForces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toForces"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/toForces"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?attr/buttoncolor"
        android:text="2"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="@+id/toCollisons"
        app:layout_constraintEnd_toStartOf="@+id/toCollisons"
        app:layout_constraintStart_toEndOf="@+id/toMotion"
        app:layout_constraintTop_toTopOf="@+id/toCollisons"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/toCollisons"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:background="?attr/buttoncolor"
        android:text="3"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="@+id/toGravitation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toGravitation"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/toGravitation"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?attr/buttoncolor"
        android:text="4"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="@+id/toRelativity"
        app:layout_constraintEnd_toStartOf="@+id/toRelativity"
        app:layout_constraintStart_toEndOf="@+id/toCollisons"
        app:layout_constraintTop_toTopOf="@+id/toRelativity"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/toRelativity"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:background="?attr/buttoncolor"
        android:text="5"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/keyEqs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="Key Equations:"
        android:textColor="?attr/textcolor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uniTitle" />

    <TextView
        android:id="@+id/expandingEqs"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="?attr/textcolor"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/uniKeyDefsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyEqs" />

    <TextView
        android:id="@+id/uniKeyDefsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key Definitions:"
        android:textColor="?attr/textcolor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toForces"
        app:layout_constraintStart_toStartOf="@+id/keyEqs"
        app:layout_constraintTop_toBottomOf="@+id/keyEqs"
        app:layout_constraintVertical_bias="0.296" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="331dp"
        android:layout_height="370dp"
        android:text="Redshift: Light moving away from us shifts to longer wavelengths. \nDoppler Effect: The resultant change in the frequency of a wave as the distance between the source and the observer changes. Most commonly observed in sound and light. \nStudies into the velocities of galaxies and distance from us led to the finding that the universe is expanding at an increasing rate. This increasing rate has led to the discovery of the concept of dark energy. \nMeasurements taken from galaxies has shown there to be more mass than is visible. This has led to the concept of dark matter. \nThe Hubble-Lemaitre law allows us to estimate the age of the universe."
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toTopOf="@+id/toForces"
        app:layout_constraintStart_toStartOf="@+id/uniKeyDefsTitle"
        app:layout_constraintTop_toBottomOf="@+id/uniKeyDefsTitle"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>