<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".ParticlesAndWaves.pawHome">

    <TextView
        android:id="@+id/pawHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:text="Particles and Waves"
        android:textColor="?attr/textcolor"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chargeButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="32dp"
        android:background="?attr/buttoncolor"
        android:text="Forces on Charged Particles"
        android:textColor="?attr/textcolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pawHeading" />

    <Button
        android:id="@+id/smButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="?attr/buttoncolor"
        android:text="The Standard Model"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="@+id/chargeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chargeButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/nucButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:background="?attr/buttoncolor"
        android:text="Nuclear Reactions"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="@+id/invButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/invButton" />

    <Button
        android:id="@+id/invButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="?attr/buttoncolor"
        android:text="Inverse Square Law"
        android:textColor="?attr/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smButton" />

    <Button
        android:id="@+id/waveButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:background="?attr/buttoncolor"
        android:text="Wave-Particle Duality"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="@+id/intButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/intButton" />

    <Button
        android:id="@+id/intButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="?attr/buttoncolor"
        android:text="Interference "
        android:textColor="?attr/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invButton" />

    <Button
        android:id="@+id/specButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:background="?attr/buttoncolor"
        android:text="Spectra"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="@+id/refButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/refButton" />

    <Button
        android:id="@+id/refButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="?attr/buttoncolor"
        android:text="Refraction of Light"
        android:textColor="?attr/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intButton" />


</androidx.constraintlayout.widget.ConstraintLayout>