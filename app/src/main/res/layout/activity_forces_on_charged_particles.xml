<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".ParticlesAndWaves.ForcesOnChargedParticles">

    <TextView
        android:id="@+id/fcpTitle"
        android:layout_width="253dp"
        android:layout_height="119dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Forces on Charged Particles"
        android:textColor="?attr/textcolor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/returntoMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/buttoncolor"
        android:textColor="?attr/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fcpTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/toSM"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/buttoncolor"
        android:text="2"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/toNR"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/buttoncolor"
        android:text="3"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toSM" />

    <Button
        android:id="@+id/toInv"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/buttoncolor"
        android:text="4"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toWPD"
        app:layout_constraintStart_toEndOf="@+id/toNR" />

    <Button
        android:id="@+id/toWPD"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:background="?attr/buttoncolor"
        android:textColor="?attr/textcolor"
        android:layout_marginBottom="16dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/toInt"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/buttoncolor"
        android:text="6"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toSpec"
        app:layout_constraintStart_toEndOf="@+id/toWPD" />

    <Button
        android:id="@+id/toSpec"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/buttoncolor"
        android:text="7"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toRef" />

    <Button
        android:id="@+id/toRef"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/buttoncolor"
        android:text="8"
        android:textColor="?attr/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/keyEqs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="Key Equations:"
        android:textColor="?attr/textcolor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fcpTitle" />

    <TextView
        android:id="@+id/fcpEquations"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="?attr/textcolor"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/keyDefsFCP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyEqs" />

    <TextView
        android:id="@+id/keyDefsFCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key Definitions:"
        android:textColor="?attr/textcolor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toNR"
        app:layout_constraintStart_toStartOf="@+id/keyEqs"
        app:layout_constraintTop_toBottomOf="@+id/keyEqs"
        app:layout_constraintVertical_bias="0.273" />

    <TextView
        android:id="@+id/defsFCP"
        android:layout_width="327dp"
        android:layout_height="202dp"
        android:textColor="?attr/textcolor"
        android:text="\nCharged particles experience a force in the electric field. These electric fields exist around charged particles and between two charged parallel plates. \n\nA moving charge produces an electric field. \n\nParticle Accelerators: The acceleration of charged particles using electric fields, which are deflected by magnetic fields, resulting in high-energy collisions of these charged particles in order to produce other particles.   "
        app:layout_constraintStart_toStartOf="@+id/keyDefsFCP"
        app:layout_constraintTop_toBottomOf="@+id/keyDefsFCP" />

</androidx.constraintlayout.widget.ConstraintLayout>